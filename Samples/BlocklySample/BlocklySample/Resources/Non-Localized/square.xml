<xml>
    <category icon="28" name="开始" colour="#009688">
        <block type="start_tilt"></block>
    </category>
    <category icon="28" name="图标" colour="#4876FF">
        <block type="icon_up"></block>
        <block type="icon_down"></block>
        <block type="icon_left"></block>
        <block type="icon_right"></block>
    </category>
    <category icon="28" name="运动" colour="%{BKY_COLOUR_HUE}">
        <block type="turtle_move">
            <value name="VALUE">
                <shadow type="math_number">
                    <field name="NUM">10</field>
                </shadow>
            </value>
        </block>
        <block type="turtle_turn">
            <value name="VALUE">
                <shadow type="angle_picker">
                    <field name="NUM">90</field>
                </shadow>
            </value>
        </block>
        <block type="turtle_color">
            <value name="COLOUR">
                <shadow type="color_picker">
                    <field name="COLOUR">#ff0000</field>
                </shadow>
            </value>
        </block>
        <block type="move_set_servos">
            <field name="TEXT">1: 40°, 2: 50°</field>
            <field name="TIME">400</field>
        </block>
    </category>
    <category icon="28" name="控制" colour="%{BKY_LOGIC_HUE}">
        <block type="control_wait">
            <value name="TIME">
                <shadow type="math_number">
                    <field name="NUM">2</field>
                </shadow>
            </value>
        </block>
        <block type="control_repeat_ext">
            <value name="TIMES">
                <shadow type="math_number">
                    <field name="NUM">3</field>
                </shadow>
            </value>
        </block>
        <block type="control_if"></block>
        <block type="control_if_else"></block>
        <block type="control_repeat_forever"></block>
        <block type="control_wait_until"></block>
        <block type="control_repeat_until"></block>
    </category>
    <category icon="28" name="声光" colour="%{BKY_LOOPS_HUE}">
        <block type="color_picker"></block>
        <block type="color_random"></block>
    </category>
    <category icon="28" name="感知" colour="%{BKY_VARIABLES_HUE}">
    </category>
    <category icon="28" name="数学" colour="%{BKY_MATH_HUE}">
        <block type="logic_compare">
            <value name="A">
                <shadow type="math_number">
                    <field name="NUM">1</field>
                </shadow>
            </value>
            <value name="B">
                <shadow type="math_number">
                    <field name="NUM">0</field>
                </shadow>
            </value>
        </block>
        <block type="logic_operation"></block>
        <block type="logic_negate"></block>
        <block type="math_number"></block>
        <block type="math_arithmetic">
            <value name="A">
                <shadow type="math_number">
                    <field name="NUM">1</field>
                </shadow>
            </value>
            <value name="B">
                <shadow type="math_number">
                    <field name="NUM">1</field>
                </shadow>
            </value>
        </block>
        <block type="math_round">
            <value name="NUM">
                <shadow type="math_number">
                    <field name="NUM">3.1</field>
                </shadow>
            </value>
        </block>
        <block type="math_modulo">
            <value name="DIVIDEND">
                <shadow type="math_number">
                    <field name="NUM">64</field>
                </shadow>
            </value>
            <value name="DIVISOR">
                <shadow type="math_number">
                    <field name="NUM">10</field>
                </shadow>
            </value>
        </block>
        <block type="math_random_limit">
            <value name="FROM">
                <shadow type="math_number">
                    <field name="NUM">1</field>
                </shadow>
            </value>
            <value name="TO">
                <shadow type="math_number">
                    <field name="NUM">100</field>
                </shadow>
            </value>
        </block>
        <block type="math_random"></block>
    </category>
    <category icon="28" name="变量" colour="%{BKY_VARIABLES_HUE}" custom="VARIABLE" />
    <category icon="28" name="函数" colour="%{BKY_PROCEDURES_HUE}" custom="PROCEDURE">
    </category>
<!--    <category icon="28" name="函数" colour="%{BKY_PROCEDURES_HUE}" custom="PROCEDURE" />-->
</xml>
